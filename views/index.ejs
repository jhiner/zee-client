<% include header %>
<body>
  <div class="pure-g">
    <div class="pure-u-1-3">
      <h1><%= title %></h1>
      <p> Welcome to <%= title %> </p><p> Click below to initiate authorization flow. </p>
      <form class="pure-form" method="post" action="/login">
        <h3>Auth Settings</h3>
        <fieldset>
          <!-- <legend>Scope</legend> -->
          <div class="pure-control-group">
            <label for="scope">Scope</label>
            openid <input id="scope" name="scope" class="pure-input-1-2" type="text" placeholder="profile" value="profile email offline_access">
          </div>
          <div class="pure-control-group">
              <label for="prompt">Prompt</label>
              <select name="prompt" class="pure-input-1-2">
                <option selected value="empty">empty</option>
                <!-- <option value="none">none</option> not supported yet -->
                <!-- <option value="login">login</option> not supported yet -->
                <option value="consent">consent</option>
              </select>
            </div>
          <div class="pure-controls">
            <br/>
            <button class="pure-button pure-button-primary" type="submit" value="Login">Login</button>
          </div>
        </fieldset>
      </form>  
    </div>
  </div>
</body>